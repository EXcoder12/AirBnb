<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <h1 class="h3 mb-4">My Bookings</h1>
      <p class="text-muted">
        This page shows all the listings you currently own. In a full
        application, this would show your past and upcoming reservations.
      </p>
    </div>
  </div>

  <% if(listings.length > 0) { %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for(let listing of listings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card h-100">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="<%= listing.title %>"
            style="height: 15rem"
          />
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br />
              &#8377;<%= listing.price.toLocaleString("en-IN") %> / Night
            </p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
  <% } else { %>
  <div class="row">
    <div class="col-12">
      <div class="alert alert-info" role="alert">
        You have not created any listings yet.
        <a href="/listings/new" class="alert-link">Become a host</a> to get
        started!
      </div>
    </div>
  </div>
  <% } %>
</div>